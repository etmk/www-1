{
  "attributeQuotes": {
    "enabled": true
  },
  "borderZero": {
    "enabled": true,
    "style": "none"
  },
  "decimalZero": {
    "enabled": true,
    "style":  "leading"
  },
  "depthLevel": {
    "enabled": false
  },
  "duplicateProperty": {
    "enabled": true
  },
  "emptyRule": {
    "enabled": true
  },
  "finalNewline": {
    "enabled": false
  },
  "hexLength": {
    "enabled": true,
    "style": "short"
  },
  "hexNotation": {
    "enabled": true,
    "style": "lowercase"
  },
  "hexValidation": {
    "enabled": true
  },
  "idSelector": {
    "enabled": true
  },
  "importantRule": {
    "enabled": true
  },
  "importPath": {
    "enabled": true,
    "filenameExtension": false,
    "leadingUnderscore": false
  },
  "maxCharPerLine": {
    "enabled": false
  },
  "newlineAfterBlock": {
    "enabled": true
  },
  "propertyOrdering": {
    "enabled": false
  },
  "propertyUnits": {
    "enabled": true,
    "properties": {
      "line-height": ["vh"]
    }
  },
  "qualifyingElement": {
    "enabled": true,
    "allowWithClass": true
  },
  "selectorNaming": {
    "enabled": true,
    "disallowUppercase": true,
    "disallowUnderscore": true,
    "disallowDash": false
  },
  "singleLinePerProperty": {
    "enabled": true,
    "allowSingleLineRules": false
  },
  "singleLinePerSelector": {
    "enabled": true,
    "style": "18f"
  },
  "spaceAfterPropertyColon": {
    "enabled": true,
    "style": "one_space"
  },
  "spaceAfterPropertyName": {
    "enabled": true,
    "style": "no_space"
  },
  "spaceAfterPropertyValue": {
    "enabled": true,
    "style": "no_space"
  },
  "spaceAroundBang": {
    "enabled": true,
    "style": "before"
  },
  "spaceAroundComma": {
    "enabled": true,
    "allowNewline": false,
    "style": "after"
  },
  "spaceAroundOperator": {
    "enabled": true,
    "style": "both"
  },
  "spaceBeforeBrace": {
    "enabled": true,
    "style": "one_space"
  },
  "spaceBetweenParens": {
    "enabled": true,
    "style": "no_space"
  },
  "stringQuotes": {
    "enabled": true,
    "style": "single"
  },
  "trailingSemicolon": {
    "enabled": true
  },
  "trailingWhitespace": {
    "enabled": true
  },
  "urlFormat": {
    "enabled": true,
    "style": "relative"
  },
  "universalSelector": {
    "enabled": false
  },
  "urlQuotes": {
    "enabled": true
  },
  "zeroUnit": {
    "enabled": true,
    "style": "no_unit"
  }
}
